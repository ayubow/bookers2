<p id=notice>
</p>
<div class="container">
<div class="row">
<div class="col-md-3">
  <%= render 'users/user', user: @user %>
  <%= render 'books/list', books: @books %>
</div>
<div class="col-md-8 offset-md-1">
<h1>Book detail</h1>
<table class="table">
  <tbody>
    <tr>
      <th><%= link_to user_path(@user.id) do %>
          <%= image_tag @book.user.get_profile_image(100,100) %><br/>
          <%= @user.name %></th>
      <% end %>
      <th><%= link_to @book.title, book_path(@book.id) %></th>
      <th><%= @book.body %></th>
      <% if @book.user == current_user %>
      <th><%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success" %></th>
      <th><%= link_to "Destroy", book_path(@book),method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-sm btn-danger" %></th>
      <% end %>
    </tr>
  </tbody>
</table>
</div>
</div>
</div>